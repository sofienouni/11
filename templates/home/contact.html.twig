{% extends 'base.html.twig' %}

{% block title %}Contactez Nous!{% endblock %}

{% block body %}
    <section class="w3l-contact-breadcrum">
        <div class="breadcrum-bg py-sm-5 py-4">
            <div class="container py-lg-3">

                <h2 style="border: none;">Contactez Nous</h2>

            </div>
        </div>
    </section>
    <!-- contact form -->
    <section class="w3l-contacts-2" id="contact">
        <div class="contacts-main">

            <div class="form-41-mian py-5">
                <div class="container py-md-3">
                    <h3 class="cont-head">Envoyez Nous Vos Messages Ici</h3>
                    <div class="d-grid align-form-map">
                        <div class="form-inner-cont">

                            {{ form_start(form) }}
                                <div class="top-inputs d-grid">
                                    {{ form_row(form.nom) }}
                                    {{ form_row(form.prenom) }}
                                </div>
                            {{ form_row(form.email) }}
                            {{ form_row(form.telephone) }}
                            {{ form_row(form.message) }}
                            {{ form_row(form.ref) }}
                                <div class="text-right">
                                    <button type="submit" class="btn btn-theme3">Envoyer</button>
                                </div>
                            {{ form_end(form) }}
                        </div>

                        <div class="contact-right">
                            <img src="assets/images/ab-2.jpg" class="img-fluid" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="contant11-top-bg py-5">
                <div class="container py-md-3">
                    <div class="d-grid contact section-gap">
                        <div class="contact-info-left d-grid text-center">
                            <div class="contact-info">
                                <span class="fa fa-location-arrow" aria-hidden="true"></span>
                                <h4>Adresse</h4>
                                <p>à côté Hopital RAZI et le nouveau MONOPRIX, cité des Oranges, Manouba 2010 2010 Manouba, Tunisia</p>
                            </div>
                            <div class="contact-info">
                                <span class="fa fa-phone" aria-hidden="true"></span>
                                <h4>Téléphone</h4>
                                <p><a href="tel:+44 7834 857829">+216 55 633 000</a></p>
                            </div>
                            <div class="contact-info">
                                <span class="fa fa-envelope-open-o" aria-hidden="true"></span>
                                <h4>Mail</h4>
                                <p><a href="mailto:mail@example.com" class="email">agence.manouba@gmail.com</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3194.135389463026!2d10.080714815117782!3d36.81527547994552!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x51fbce56b51a317b!2zMzbCsDQ4JzU1LjAiTiAxMMKwMDQnNTguNSJF!5e0!3m2!1sfr!2stn!4v1674955528483!5m2!1sfr!2stn" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </section>




{% endblock %}
